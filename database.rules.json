{
  "rules": {
      "users": {
        ".read": "auth.uid !== null",
        ".write": true
      },
      "comments": {
        ".indexOn": ["eventSubType", "date"],
        ".read": true,
        ".write": true
      },
      "events": {
        ".indexOn": "eventType",
        ".read": true,
        ".write": true
      }
  }
}